@using MyFitScope.Web.ViewModels.Users
@model UserLoggedInIndexPageViewModel
@{
    this.Layout = "_Layout";
}


<div class="container">
    <main role="main" class="pb-3">
        <div>
            <div class="row">
                <div class="col-md-3">
                    <ul class="nav nav-pills flex-column">
                        <!--add class "active" to select a link-->
                        <li>
                            @if (Model.AvatarImageUrl != null)
                            {
                                <img src="@Model.AvatarImageUrl" width="100" alt="avatar photo" />
                            }
                            else
                            {
                                <img src="https://capenetworks.com/static/images/testimonials/user-icon.svg" width="100" alt="default user photo" />
                            }

                            <form method="post" asp-controller="Users" asp-action="AddAvatarPhoto" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="avatarInputForm" class="upload-btn">
                                        <i class="fa fa-upload"></i> Upload
                                        <input id="avatarInputForm" type="file" name="Photo" class="form-control" />
                                    </label>
                                    <div class="margin-top-0"></div>
                                    <span id="file-selected"></span>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </li>
                        <li class="nav-item"><a class="nav-link" id="curent-workout" asp-controller="Workouts" asp-action="CurrentWorkout">Current Workout</a></li>
                        <li class="nav-item"><a class="nav-link" id="progress" asp-controller="Progresses" asp-action="Statistics">Progress</a></li>
                        <li class="nav-item"><a class="nav-link" id="create-exercise" asp-controller="Exercises" asp-action="CreateExercise">Create Exercise</a></li>
                        <li class="nav-item"><a class="nav-link" id="create-workout" asp-controller="Workouts" asp-action="AddWorkout">Create Workout</a></li>
                    </ul>
                </div>
                <div class="col-md-9">

                    @this.RenderBody()

                </div>
            </div>
        </div>
    </main>
</div>

@this.RenderSection("Scripts", required: false)