@using MyFitScope.Data.Models.BlogModels.Enums
@using MyFitScope.Web.ViewModels.Articles

@model CreateArticleInputViewModel
@{
    this.Layout = "_ArticleLayout";
    this.ViewData["Title"] = "Create Article";
}

<h1>Create your Article</h1>
<p>You can use the form below to create your Article</p>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<form method="post" class="form-group" asp-controller="Articles" asp-action="CreateArticle" enctype="multipart/form-data">
    <div>
        <label asp-for="ArticleTitle">Title:</label>
        <input asp-for="ArticleTitle" class="form-control" placeholder="Enter article title">
        <span asp-validation-for="ArticleTitle" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="ArticleCategory">Article Category:</label>
        <select asp-for="ArticleCategory" asp-items="@Html.GetEnumSelectList<ArticleCategory>()" class="form-control"></select>
        <span asp-validation-for="ArticleCategory" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArticleContent">Content:</label>
        <textarea asp-for="ArticleContent" class="form-control" placeholder="Enter article content"></textarea>
        <span asp-validation-for="ArticleContent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArticleImage" class="upload-btn">
            <i class="fa fa-upload"></i> Upload
            <input asp-for="ArticleImage" type="file" class="form-control" />
            <span asp-validation-for="ArticleImage" class="text-danger"></span>
        </label>
        <div class="margin-top-0"></div>
        <span id="file-selected"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

