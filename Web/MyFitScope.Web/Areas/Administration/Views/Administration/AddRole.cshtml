@using MyFitScope.Web.ViewModels.Administration.Administration
@model AddRoleViewModel

@{
    this.ViewData["Title"] = "Add Role";
}

<section class="container col-md-8">
    <h2 class="mb-0 p-3 text-center text-white bg-dark r-top-corners">Create Role</h2>
    <form method="post" class="form-group bg-light p-4 mt-0 r-bottom-corners" asp-area="Administration" asp-controller="Administration" asp-action="AddRole">
        <div class="form-group">
            <label asp-for="Name">Role name:</label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Enter role name..." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Create Role</button>
        </div>
    </form>
</section>
